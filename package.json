{
  "name": "lakasir-printer-bridge",
  "version": "1.0.0",
  "description": "Printer bridge for Lakasir POS",
  "main": "main.js",
  "author": {
    "name": "Lakasir",
    "email": "lakasir@example.com"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.lakasir.printer-bridge",
    "productName": "Lakasir Printer Bridge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  },
  "dependencies": {
    "@thiagoelg/node-printer": "0.6.2",
    "cors": "^2.8.5",
    "dotenv": "17.2.3",
    "electron-store": "^8.1.0",
    "express": "^4.18.2",
    "node-thermal-printer": "4.5.0",
    "pdf-to-printer": "^5.5.0"
  },
  "devDependencies": {
    "electron": "23.3.13",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "3.2.9"
  }
}
